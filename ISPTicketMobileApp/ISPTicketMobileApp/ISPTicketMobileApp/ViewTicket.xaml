<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ISPTicketMobileApp.ViewTicket">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="txt_ticketNum" Text="Customer" FontSize="24" HorizontalOptions="CenterAndExpand" />

            <Label Text="Status" FontSize="20" />
            <Entry x:Name="txt_status" />

            <Label Text="Comment" FontSize="20" />
            <Editor x:Name="txt_comment" AutoSize="TextChanges" FontSize="16" />

            <Label Text="Assigned Tech" FontSize="20" />
            <Entry x:Name="txt_tech" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>